{
  "sanitize": {
    "targets": ["**/*"],
    "patterns": ["@copilot-*", "GUIDANCE:*"],
    "fallback": "request_user_input"
  },
  "structure": {
    "directories": ["/src", "/tests", "/docs", "/config"],
    "mandatoryFiles": ["README.md", ".gitignore", "package.json"]
  },
  "safety": {
    "backup": true,
    "logging": true,
    "rollback": true
  }
}
