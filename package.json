{
  "name": "bolt2bolt",
  "version": "1.4.2",
  "description": "AI-Powered Automation Framework with Prompt Optimization",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bolt2bolt": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/cli.js",
    "dev": "ts-node src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "optimize-prompts": "ts-node src/optimize-prompts.ts",
    "optimize-report": "ts-node src/optimize-prompts.ts --report-dir=./reports",
    "optimize-apply": "ts-node src/optimize-prompts.ts --apply",
    "validate-codebase": "node scripts/validate-codebase-instructions.js",
    "precommit": "npm run lint && npm run validate-codebase"
  },
  "keywords": [
    "ai",
    "automation",
    "copilot",
    "prompt-engineering",
    "optimization"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^10.0.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/node": "^18.15.11",
    "eslint": "^8.38.0",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  }
}